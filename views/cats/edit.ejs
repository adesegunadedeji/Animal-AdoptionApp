<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Your cat</title>
</head>
<body>
<%- include ../partials/_navbar.ejs %>

    <a href="/cats">back home</a>

    <form method="POST" action="/cats/<%=catId%>?_method=PUT" enctype="multipart/form-data">
       <label for="name">name:</label>
            <input type="text" value="<%=cat.name%>" name="name">
        <label for="age">age:</label>
            <input type="text" value="<%=cat.age%>" name="age">    
        <select name="gender">
            <option value="male">male</option>
            <option value="female">female</option>
        </select>
        <label for="description">description:</label>
            <textarea type="text" name="description"></textarea>
         <label for="image">image:</label>  
      <input type="file" name="image">
        <input type="submit" value="update">   
    </form>

<%- include ../partials/_footer.ejs %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script>
         $(".catDropdown-content").css("display","none")
         $(".dogDropdown-content").css("display","none")

$(".catDiv").mouseover(function(){
            $(".catDropdown-content").css("display","inline-block");
            $(".dogDropdown-content").css("display","none");
})

$(".catDiv").mouseout(function(){
            $(".catDropdown-content").css("display","none");
})

$(".dogDiv").mouseover(function(){
            $(".dogDropdown-content").css("display","inline-block");
            $(".catDropdown-content").css("display","none");
})

$(".dogDiv").mouseout(function(){
            $(".dogDropdown-content").css("display","none");
})
</script>
</body>
</html>