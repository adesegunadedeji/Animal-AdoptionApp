<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   <link rel="stylesheet" type="text/css" href="/static/footer-styles.css">
   <link rel="stylesheet" type="text/css" href="/static/navbar-styles.css">
   <link rel="stylesheet" type="text/css" href="/static/show-styles.css">
   <title>Your cat</title>
</head>
<body>
           <%- include ../partials/_navbar.ejs %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <img id="pic" src="../public/uploads/<%=cat.image%>">
            </div>
            <div class="col-lg-6" id="data">
                <h1 id="name"><%=cat.name%></h1>
                <div class="divider"></div>
                <h2>age: <%=cat.age%></h2>
                <h2>gender: <%=cat.gender%></h2>
                <div class="divider"></div>
                <h3><%=cat.description%></h3>
                <div>
                <% if(cat.creator == currentUser && currentUser !== undefined) { %>
                    <div id="buttons">
                    <form action="/cats/<%= cat._id %>/edit">
                    <input class="btn btn-outline-secondary btn-xs" type="submit" value="Edit <%=cat.name%>">
                    </form><br>
                    <form action="/cats/<%= cat._id%>?_method=DELETE" method="POST">
                    <input class="btn btn-outline-danger btn-xs" type="submit" value="Remove <%=cat.name%>">
                    </form>
                    </div>
                <% } %>
                </div>  
            </div>      
        </div>
    </div>    
    
  <%- include ../partials/_footer.ejs %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script>
        $(".catDropdown-content").css("display","none")
        $(".dogDropdown-content").css("display","none")

$(".catDiv").mouseover(function(){
            $(".catDropdown-content").css("display","inline-block");
            $(".dogDropdown-content").css("display","none");
})

$(".catDiv").mouseout(function(){
            $(".catDropdown-content").css("display","none");
})

$(".dogDiv").mouseover(function(){
            $(".dogDropdown-content").css("display","inline-block");
            $(".catDropdown-content").css("display","none");
})

$(".dogDiv").mouseout(function(){
            $(".dogDropdown-content").css("display","none");
})
</script>
</body>
</html>